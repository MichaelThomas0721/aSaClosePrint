{
    "manifest_version": 3,
    "name": "Color Fetcher",
    "version": "1.0",
    "description": "Add the reading time to Chrome Extension documentation articles",
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "match_about_blank": true,
            "run_at": "document_idle",
            "matches": ["<all_urls>"]
        }
    ]
}